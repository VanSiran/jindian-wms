<odoo>
  <data>
    <record model="ir.ui.view" id="ruku_wizard_view">
        <field name="name">入库</field>
        <field name="model">wms.wizard.ruku</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
        	<form string="入库" create="false" edit="false">
          	<!--The header tag is built to add buttons within. This puts them at the top -->
          	<header>
          	    <!--This will create the statusbar, thanks to the widget. -->
          	    <field name="state" widget="statusbar"/>
          	</header>

            <field name="tbeijians" attrs="{'invisible': True}"/>
            <field name="tbeijianexts" attrs="{'invisible': True}"/>

          	<group attrs="{'invisible': [('state','!=','selcangku')]}">
                <h3 colspan="2" style="text-align:center;color:#7c7bad;margin-top:-8px">
                  <span class="o_field_char o_field_widget">选择仓库</span>
                </h3>
          	    <field name="cangku" options="{'no_create': True}" widget="tree_selection_field"/>
          	</group>

          	<group attrs="{'invisible': [('state','!=','selbeijianext')]}">
                <h3 colspan="2" style="text-align:center;color:#7c7bad;margin-top:-8px">
                  <span class="o_field_char o_field_widget">选择备件</span>
                </h3>
          	    <field name="shebei" options="{'no_create': True}" widget="tree_selection_field"/>
                <field name="beijian" domain="[('id', 'in', tbeijians)]"
                  options="{'no_create': True}"
                  attrs="{'invisible': [('shebei','=',False)]}"/>
                <field name="beijianext"
                  domain="[('beijian', '=', beijian), ('id', 'in', tbeijianexts)]"
                  options="{'no_create': True}"
                  attrs="{'invisible': [('beijian','=',False)]}"/>
                <field name="image" widget="image" class="oe_avatar"
                  attrs="{'invisible': [('beijianext','=',False)]}" readonly='1'/>
          	</group>

          	<group attrs="{'invisible': [('state','!=','fillform')]}" col="10">
                <h3 colspan="10" style="text-align:center;color:#7c7bad;margin-top:-8px">
                  <field name="info" readonly="1"
                    attrs="{'invisible': [('state','!=','fillform')]}"/>
                </h3>
                <field name="rukushuliang" colspan="10"/>
                <field name="huowei" colspan="9" options="{'no_create': True}"
                  domain="[('beijianext', '=', beijianext), ('cangku', '=', cangku)]"/>
                <button string="+ 新增货位" colspan="1" type="object"
                  name="newhuowei_wizard_act_window"
                  context="{'cangku': cangku, 'beijianext': beijianext, 'wizard': active_id}"/>
                <field name="changjia" colspan="10"
                  domain="['|', ('beijian', '=', beijian), ('beijian', '=', False)]"/>
                <field name="shengchanriqi" colspan="10"/>
                <field name="pihao" colspan="10"/>
          	</group>
            <group attrs="{'invisible': [('state','!=','confirm')]}">
                <!-- <h3 colspan="10" style="text-align:center;color:#7c7bad;margin-top:-8px">
                  <field name="info" readonly="1"
                    attrs="{'invisible': [('state','!=','fillform')]}"/>
                </h3>
                <field name="rukushuliang" readonly='1'/> -->
                <!--,('rukushuliang','&lt;',1)  -->
                <!-- <div class="ruku_warn" attrs="{'invisible': [('rukushuliang','==',1)]}">
                  <p><b>⚠️ 注意</b>：一次性入库<b><field name="rukushuliang" readonly='1'/>个</b>备件，请务必确定这些备件的<b>厂家</b>、<b>生产日期</b>、<b>批号</b>都一致。不同<b>厂家</b>、<b>生产日期</b>、<b>批号</b>的备件，请分多次入库。</p>
                </div> -->
                <!-- <field name="huowei" readonly='1'/>
                <field name="changjia" readonly="1"/>
                <field name="shengchanriqi" readonly="1"/>
                <field name="pihao" readonly="1"/> -->
          	</group>
            <footer style="text-align:center">
                <button string="&lt; 上一步" type="object" name="progress_prev"
                  attrs="{'invisible': [('state','==','selcangku')]}"/>
                <span style="display:inline-block;width:20px"
                  attrs="{'invisible': [('state','==','selcangku')]}"></span>
                <button string="下一步 &gt;" type="object" name="progress_next"
                  class="btn-primary" attrs="{'invisible': [('state','==','confirm')]}"/>
                <button string="入 库 √" type="object" name="progress_next"
                  class="btn-primary" attrs="{'invisible': [('state','!=','confirm')]}"/>
            </footer>
          </form>
        </field>
    </record>

    <record id="ruku_wizard_act_window" model="ir.actions.act_window">
        <field name="name">入库</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wms.wizard.ruku</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="ruku_wizard_view"/>
        <field name="target">new</field>
    </record>

  </data>
</odoo>
